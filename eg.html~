<html>

  <head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {
        packages: ['corechart']
      });
      google.charts.setOnLoadCallback(drawStuff);

      function drawStuff() {
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Course');
        data.addColumn('number', 'Score');
        data.addRows([
          ['Lakes', 28],
          ['Dawson', 27],
          ['Lakes', 29],
          ['Dawson', 21],
          ['Lakes', 25]
        ]);


        var options = {
          title: 'Bryans scores',
          width: 500,
          height: 300,
          legend: 'none',
          vAxis: {
            gridlines: {
              count: 4
            }
          }
        };

        var chart = new google.visualization.LineChart(document.getElementById('player_score_chart'));

        chart.draw(data, options);

        document.getElementById('player-select').onchange = function() {
          options['vAxis']['format'] = this.value;

          switch (this.value) {
            case 'bryan':


              data.removeRows(0, 5);


        var options = { title: 'Bryans scores' };

              data.addRows([
                ['lakes', 16],
                ['dawson', 22],
                ['lakes', 42],
                ['dawson', 30],
                ['lakes', 26]
              ])




              break;

            case 'peter':
              data.removeRows(0, 5);

var options = {
          title: 'Peters scores',
          width: 500,
          height: 300,
          legend: 'none',
          vAxis: {
            gridlines: {
              count: 4
            }
          }
        };

              data.addRows([
                ['lakes', 26],
                ['dawson', 32],
                ['lakes', 26],
                ['dawson', 37],
                ['lakes', 26]
              ])

chart.draw(data, options);

              break;

            case 'tony':
             data.removeRows(0, 5);
var options = { title: 'Tonys scores' };


              data.addRows([
                ['lakes', 16],
                ['dawson', 22],
                ['lakes', 22],
                ['dawson', 30],
                ['lakes', 26]
              ])


              break;




case 'dave':
             data.removeRows(0, 5);

var options = { title: 'Daves scores' };

              data.addRows([
                ['lakes', 16],
                ['dawson', 22],
                ['lakes', 22],
                ['dawson', 30],
                ['lakes', 26]
              ])


              break;


case 'john':
             data.removeRows(0, 5);

var options = { title: 'Johns scores' };

              data.addRows([
                ['lakes', 26],
                ['dawson', 22],
                ['lakes', 32],
                ['dawson', 20],
                ['lakes', 23]
              ])


              break;



case 'larry':
             data.removeRows(0, 5);

var options = { title: 'Larrys scores' };

              data.addRows([
                ['lakes', 26],
                ['dawson', 32],
                ['lakes', 22],
                ['dawson', 32],
                ['lakes', 36]
              ])


              break;








            case '4':
              thisPrice = 6;
              break;
          }










          chart.draw(data, options);
        };
      };

    </script>
  </head>
